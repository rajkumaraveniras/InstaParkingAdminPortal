@{
    ViewBag.Title = "EditZone";
    Layout = null;
}
<div class="page page-create-zone">
    <div data-ng-controller="ParkingCtrl">
        <form name="formZones">
            <div class="row ui-section">
                <div class="col-md-12">
                    <article class="article">
                        <md-card class="no-margin-h">
                            <md-toolbar class="md-table-toolbar md-default" ng-hide="options.rowSelection && selected.length">
                                <div class="md-toolbar-tools">
                                    <span>Edit Zone</span>
                                    <div flex></div>
                                    <a href="#!/parking/zones" class="md-button md-raised btn-w-md" style="display: flex;">
                                        <i class="material-icons">arrow_back</i> Back To Zones
                                    </a>
                                </div>
                            </md-toolbar>

                            <div>
                                <div class="col-md-4">
                                    <md-input-container class="md-block">
                                        <label>Zone Code</label>
                                        <input ng-model="ZonesModel['ZoneCode']" name="ZoneCode" required>
                                    </md-input-container>
                                </div>

                                <div class="col-md-4">
                                    <md-input-container class="md-block">
                                        <label>Zone Name</label>
                                        <input ng-model="ZonesModel['ZoneName']" name="ZoneName" required>
                                    </md-input-container>
                                </div>

                                <div class="col-md-4">
                                    <md-input-container class="full-width">
                                        <label>City</label>                                        
                                        <md-select ng-model="ZonesModel['CityID']" aria-label="select" name="CityID">
                                            <md-option ng-repeat="zonescity in CityListModel" value="{{zonescity.CityID}}"> {{zonescity.CityName}} </md-option>
                                        </md-select>
                                    </md-input-container>
                                </div>

                                <div class="col-md-4">
                                    <md-checkbox aria-label="Checkbox 1" class="mt-10" ng-model="ZonesModel['IsActive']"> Status </md-checkbox>
                                    @*<md-input-container class="md-block">
                                            <label>Status</label>
                                            <md-select ng-model="zonesstatusddl.zonesstatusname" aria-label="select">
                                                <md-option ng-repeat="zonesstatus in zonesstatusddl.zonesstatus" value="{{zonesstatus.abbrev}}"> {{zonesstatus.abbrev}} </md-option>
                                            </md-select>
                                        </md-input-container>*@
                                </div>

                                <div class="col-md-12 text-center" style="margin: 20px 0px;">
                                    <md-button type="submit" class="md-button md-raised btn-w-md md-default custom-btn"
                                               data-ng-click="formZones.$valid && UpdateZone()">Update Zone</md-button>
                                   
                                </div>
                            </div>
                        </md-card>
                    </article>
                </div>
            </div>
        </form>
    </div>
</div>
@Html.Hidden("ViewZone", Url.Action("ViewZone", "Parking"))
@Html.Hidden("GetActiveCitiesList", Url.Action("GetActiveCitiesList", "Parking"))
@Html.Hidden("UpdateZone", Url.Action("SaveZone", "Parking"))
